services:
  {{ eturnal_service_name }}:
    container_name: {{ eturnal_service_name }}
    image: {{ eturnal_image }}
    restart: unless-stopped
    # Важно: Host networking для корректной работы UDP и портов
    network_mode: "host"

    volumes:
      - "{{ eturnal_config_dir }}/eturnal.yml:/etc/eturnal.yml:ro"
